<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
        <style>
          .card {
            width: 80%;
            height: 50vh;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: left;
            margin-top: -200px;
          }

           h1 {
            text-align: center;
           }
        </style>
    </head>
    <body>

      <% if (errors && errors.length > 0) { %>
        <div class="error-messages">
      
                <% errors.forEach(message => { %>
                  <div class="alert alert-danger" role="alert">
                    <%= message %>
                  </div>
                <% }) %>
           
        </div>
    <% } %>

    <% if (status) { %>
    <div class="alert alert-success" role="alert">
      submitted apllication
    </div>
    <% } %>


      <div class="card">
        <h1><%= job.desc %></h1>
        <h4><%= job.company %>
        
         <%if(name){ %>
          <a href="/editjob/<%= job.id %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
            </svg>
          </a>

          <a href="/deletejob/<%= job.id %>">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-x" viewBox="0 0 16 16">
              <path d="M6.854 7.146a.5.5 0 1 0-.708.708L7.293 9l-1.147 1.146a.5.5 0 0 0 .708.708L8 9.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 9l1.147-1.146a.5.5 0 0 0-.708-.708L8 8.293z"/>
              <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"/>
            </svg>
          </a>
         <%} %>
        
        </h4>
        <h5><%= job.role %></h5>
        <ul>
          <li><%= job.location %></li>
          <li><%= job.pay %></li>
          <li>Apply by <%= job.applyDate %></li>
          <li>Number of openings: <%= job.openings %></li>
         <% if(name){ %>
            <a href="/jobs/applicants/<%= job.id %>"><li>Applicants</li></a>
       <%  } %>
      </ul>
      
        <div>
          <% job.skills.forEach((skill)=>{ %>
            <button class="btn btn-outline-primary"><%= skill %></button>
          <% }) %>
        </div>
        <div>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Apply now
          </button>
        </div>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">easily</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/jobs/<%= job.id %>" method="post" enctype="multipart/form-data">
                
                <div class="mb-3">
                  <label for="john doe" class="form-label">Name </label>
                  <input name="name" type="text" class="form-control"  aria-describedby="name" required>
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email </label>
                  <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Contact </label>
                  <input name="contact" type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Resume </label>
                  <input name="resume" type="file" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>

        
        <script src="" async defer></script>
    </body>
</html>