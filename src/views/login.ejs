<body>

  <% if (errors && errors.length > 0) { %>
    <div class="error-messages">
  
            <% errors.forEach(message => { %>
              <div class="alert alert-danger" role="alert">
                <%= message %>
              </div>
            <% }) %>
       
    </div>
<% } %>


<% if (userNotFound) { %>
  <div class="error-messages">

       
            <div class="alert alert-danger" role="alert">
No user found, <a href="/register">register</a> first
            </div>

     
  </div>
<% } %>


